<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:keepScreenOn="true">
	         <com.example.holoterrainviewer.DrawView
         android:id="@+id/drawView1"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content" />

	         <LinearLayout
	             android:layout_width="match_parent"
	             android:layout_height="377dp"
	             android:layout_gravity="bottom"
	             android:background= "#484848" >

	         </LinearLayout>

	         <LinearLayout
	             android:layout_width="match_parent"
	             android:layout_height="375dp"
	             android:layout_gravity="bottom"
	             android:orientation="vertical" >

	             <TableLayout
	                 android:layout_width="fill_parent"
	                 android:layout_height="293dp"
	                 android:layout_marginLeft="20dp"
	                 android:layout_marginRight="20dp"
	                 android:layout_weight="0.3" >

	                 <TableRow
	                     android:id="@+id/tableRow1"
	                     android:layout_width="wrap_content"
	                     android:layout_height="wrap_content"
	                     android:layout_weight="0.3" >

	                     <ToggleButton
	                         android:id="@+id/buttonDrawPath"
	                         android:layout_width="wrap_content"
	                         android:layout_height="match_parent"
	                         android:layout_marginRight="20dp"
	                         android:layout_weight="1"
	                         android:onClick="drawPath"
	                         android:text="Draw Path"
	                         android:textOff="Draw Path"
	                         android:textOn="Draw Path"
	                         android:textSize="20sp" />

	                     <ToggleButton
	                         android:id="@+id/buttonPlaceRoi"
	                         android:layout_width="wrap_content"
	                         android:layout_height="match_parent"
	                         android:layout_marginLeft="20dp"
	                         android:layout_weight="1"
	                         android:onClick="placeRoi"
	                         android:text="Place ROI"
	                         android:textOff="Place ROI"
	                         android:textOn="Place ROI"
	                         android:textSize="20sp" />

	                 </TableRow>

	                 <TableRow
	                     android:id="@+id/tableRow2"
	                     android:layout_width="wrap_content"
	                     android:layout_height="wrap_content"
	                     android:layout_weight="0.3" >

	                     <ToggleButton
	                         android:id="@+id/buttonPlacePath"
	                         android:layout_width="wrap_content"
	                         android:layout_height="match_parent"
	                         android:layout_marginRight="20dp"
	                         android:layout_weight="1"
	                         android:onClick="placePath"
	                         android:text="Place Path"
	                         android:textOff="Place Path"
	                         android:textOn="Place Path"
	                         android:textSize="20sp" />

	                     <ToggleButton
	                         android:id="@+id/buttonPlacePoi"
	                         android:layout_width="wrap_content"
	                         android:layout_height="match_parent"
	                         android:layout_marginLeft="20dp"
	                         android:layout_weight="1"
	                         android:onClick="placePoi"
	                         android:text="Place POI"
	                         android:textOff="Place POI"
	                         android:textOn="Place POI"
	                         android:textSize="20dp" />

	                 </TableRow>
	             </TableLayout>

	             <LinearLayout
	                 android:layout_width="match_parent"
	                 android:layout_height="match_parent"
	                 android:layout_weight="1.0" >

	                 <ToggleButton
	                     android:id="@+id/buttonSelectHeight"
	                     android:layout_width="wrap_content"
	                     android:layout_height="match_parent"
	                     android:layout_marginLeft="40dp"
	                     android:layout_marginTop="20dp"
	                     android:layout_weight="1"
	                     android:onClick="selectHeight"
	                     android:text="Select Height"
	                     android:textOff="Select Height"
	                     android:textOn="Select Height"
	                     android:textSize="20dp" />

	                 <ToggleButton
	                     android:id="@+id/buttonFilterHeight"
	                     android:layout_width="wrap_content"
	                     android:layout_height="match_parent"
	                     android:layout_marginRight="40dp"
	                     android:layout_marginTop="20dp"
	                     android:layout_weight="1"
	                     android:onClick="filterHeight"
	                     android:text="Filter Height"
	                     android:textOff="Filter Height"
	                     android:textOn="Filter Height"
	                     android:textSize="20dp" />

	             </LinearLayout>

	         </LinearLayout>

</FrameLayout>